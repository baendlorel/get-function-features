{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs", // 必须为 commonjs
    "target": "es6",
    "outDir": "dist",
    "esModuleInterop": true, // 可选，增强兼容性
    "strict": true,
    "baseUrl": ".", // 相对路径的起点
    "paths": {
      "@/*": ["src/*"] // 把 @ 映射到 src
    }
  },
  "include": ["src/*.ts"],
  "exclude": ["tests"]
}
